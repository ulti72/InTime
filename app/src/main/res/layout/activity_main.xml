<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ulti72.intime.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Money Left:"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/text_view_countdown"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="21dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00000"
        android:id="@+id/text_view_countdown"
        android:textColor="@android:color/black"
        android:textSize="55sp"
        android:layout_marginTop="104dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/used_time"
        android:layout_alignStart="@+id/used_time" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$ 86400"
        android:id="@+id/total_time"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:layout_below="@+id/text_view_countdown"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="50dp"
        android:layout_marginEnd="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Money Spent:"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:id="@+id/textView"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_alignBaseline="@+id/used_time"
        android:layout_alignBottom="@+id/used_time"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_marginLeft="10dp"
        android:id="@+id/used_time"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:layout_marginBottom="75dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/textView" />



</RelativeLayout>
